<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/height_content_width_parent"
    android:layout_marginTop="@dimen/dp_20"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_long_range_remote"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@mipmap/ic_group2" />

    <LinearLayout
        style="@style/match_match"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            style="@style/wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/ic_home_hot_service_slant_line"
            android:drawableRight="@mipmap/ic_home_hot_service_slant_line"
            android:drawablePadding="@dimen/dp_10"
            android:padding="@dimen/dp_20"
            android:text="@string/home_hot_service"
            android:textColor="@color/deep_gray_text"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_home_set_meal_1"
            style="@style/match_match"
            android:background="@android:color/white"
            android:layout_weight="1" />

        <LinearLayout
            style="@style/match_match"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_set_meal_2"
                style="@style/match_match"
                android:background="@android:color/white"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_home_set_meal_3"
                style="@style/match_match"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_pregnant_mother_service_package_recyclerView"
        style="@style/height_content_width_parent"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
