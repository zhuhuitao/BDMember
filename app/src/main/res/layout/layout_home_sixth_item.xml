<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/height_content_width_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/height_content_width_parent"
        android:background="@android:color/white"
        android:padding="@dimen/dp_10">

        <TextView
            style="@style/wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/ic_home_famous_nurse_slant_line"
            android:drawableRight="@mipmap/ic_home_famous_nurse_slant_line"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/public_activities"
            android:textColor="@color/deep_gray_text"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_home_public_activities"
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:drawableRight="@mipmap/ic_more"
            android:drawablePadding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/more"
            android:textColor="@color/shallow_gray_text"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_public_activities_recyclerView"
        style="@style/height_content_width_parent"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:padding="@dimen/dp_10" />
</LinearLayout>
