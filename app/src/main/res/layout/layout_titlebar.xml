<?xml version="1.0" encoding="utf-8"?><!--头部菜单-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/liear_titlebar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relat_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/top_left"
            android:layout_width="@dimen/dp_48"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/tm"
            android:padding="@dimen/dp_12"
            android:src="@drawable/head_back_selectot"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_left"
            style="@style/btn_default"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray_4"
            android:textSize="@dimen/sp_16"
            android:drawableRight="@mipmap/ic_down"
            android:visibility="gone" />

        <TextView
            android:id="@+id/top_title"
            style="@style/tv_default"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/font_gray_4"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/top_right"
            android:layout_width="@dimen/dp_48"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@color/tm"
            android:padding="@dimen/dp_12"
            android:src="@drawable/head_back_selectot"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_right"
            style="@style/tv_default"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray_4"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>