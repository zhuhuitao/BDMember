<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_25"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_90"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_40"
                android:adjustViewBounds="true"
                android:src="@mipmap/logo" />

            <RadioGroup
                android:id="@+id/rg_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_ksdl"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_bottom_selectot"
                    android:button="@null"
                    android:minHeight="@dimen/dp_30"
                    android:minWidth="@dimen/dp_0"
                    android:text="@string/quicklyLogin"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/bottombar_color_theme_gray" />

                <RadioButton
                    android:id="@+id/rb_mmdl"
                    style="@style/RadioButton"
                android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:background="@drawable/line_bottom_selectot"
                    android:button="@null"
                    android:minHeight="@dimen/dp_30"
                    android:minWidth="@dimen/dp_0"
                    android:text="@string/accountLogin"
                    android:textColor="@color/bottombar_color_theme_gray" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp_35">

                <EditText
                    android:id="@+id/input_user"
                    style="@style/et_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_boder_selectot"
                    android:digits="@string/digits"
                    android:hint="@string/enterMobile"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:minHeight="@dimen/dp_35"
                    android:paddingLeft="@dimen/dp_35"
                    android:textColor="@color/font_gray_3" />

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@mipmap/login_phone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relate_code_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:minHeight="@dimen/dp_35">

                <EditText
                    android:id="@+id/input_tx_code"
                    style="@style/et_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/login_boder_selectot"
                    android:digits="@string/digits"
                    android:hint="@string/RandomCode"
                    android:inputType="text"
                    android:maxLength="4"
                    android:minHeight="@dimen/dp_35"
                    android:paddingLeft="@dimen/dp_35"
                    android:paddingRight="@dimen/dp_45"
                    android:paddingTop="@dimen/dp_5"
                    android:textColor="@color/font_gray_3" />

                <LinearLayout
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/boder_gray_oval"
                    android:paddingLeft="@dimen/dp_8">

                    <com.newdjk.bdmember.widget.VerficationCodeView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/vcv_tx_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:codeBackground="@color/tm"
                        app:codeLength="4"
                        app:codeTextSize="@dimen/sp_28"
                        app:isContainChar="true"
                        app:linNum="5"
                        app:pointNum="2" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:src="@mipmap/imagecode" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relate_code_bd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:minHeight="@dimen/dp_35">

                <EditText
                    android:id="@+id/input_bd_code"
                    style="@style/et_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/login_boder_selectot"
                    android:digits="@string/digits"
                    android:hint="@string/enterCode"
                    android:inputType="text"
                    android:maxLength="6"
                    android:minHeight="@dimen/dp_35"
                    android:paddingLeft="@dimen/dp_35"
                    android:paddingRight="@dimen/dp_45"
                    android:textColor="@color/font_gray_3" />

                <TextView
                    android:id="@+id/tv_bd_code"
                    style="@style/tv_default"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_26"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/boder_huang_oval"
                    android:gravity="center"
                    android:text="@string/sendCode"
                    android:textColor="@color/huang"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:src="@mipmap/login_code" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relate_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:minHeight="@dimen/dp_35"
                android:visibility="gone">

                <EditText
                    android:id="@+id/input_password"
                    style="@style/et_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/login_boder_selectot"
                    android:digits="@string/digits"
                    android:hint="@string/enterPass"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:minHeight="@dimen/dp_35"
                    android:paddingLeft="@dimen/dp_35"
                    android:paddingRight="@dimen/dp_45"
                    android:textColor="@color/font_gray_3" />

                <com.newdjk.bdmember.widget.MyCheckBox
                    android:id="@+id/CheckBox"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_23"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/checkbox_selectot"
                    android:gravity="center"
                    app:drawableHeights="23dp"
                    app:drawableWidths="70dp" />

                <ImageView
                    android:id="@+id/img_left"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@mipmap/login_key2" />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_login"
                style="@style/btn_default"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dp_24"
                android:minHeight="@dimen/dp_40"
                android:text="@string/login"
                android:textColor="@color/font_white_gray"
                android:textSize="@dimen/sp_22" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_forget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:minHeight="@dimen/dp_25"
                        android:text="@string/forgotPass"
                        android:textColor="@color/theme"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/tv_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:gravity="center"
                        android:minHeight="@dimen/dp_25"
                        android:text="@string/registerAccount"
                        android:textColor="@color/theme"
                        android:textSize="12dip" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/line" />

                    <TextView
                        style="@style/tv_default"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="OR"
                        android:textColor="@color/font_gray_2" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_1"
                        android:layout_weight="1"
                        android:background="@color/line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wuchat" />

                    <TextView
                        style="@style/tv_default"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/WxOrMobile"
                        android:textColor="@color/font_gray_2"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>