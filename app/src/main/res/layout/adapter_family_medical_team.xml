<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/height_content_width_parent"
    android:layout_marginTop="@dimen/dp_1"
    android:id="@+id/rl_item"
    android:background="@android:color/white"
    android:padding="@dimen/dp_10">


    <TextView
        android:id="@+id/tv_family_them"
        style="@style/wrap_content"
        android:text="@string/contractTextThem"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_family_team_name"
        style="@style/wrap_content"
        android:layout_below="@id/tv_family_them"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/contractTextThem"
        android:textColor="@color/deep_gray_text"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_see_detail"
        style="@style/wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_orange_box"
        android:gravity="center"
        android:minWidth="@dimen/dp_70"
        android:minHeight="@dimen/dp_30"
        android:text="@string/seeDetail"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
