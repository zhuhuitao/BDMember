<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/height_content_width_parent"
    android:id="@+id/rl_hub"
    android:padding="@dimen/dp_10"
    android:background="@android:color/white"
    android:layout_marginBottom="@dimen/dp_10">


    <ImageView
        android:id="@+id/iv_hub_activities_them"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80" />


    <LinearLayout
        style="@style/wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/iv_hub_activities_them"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hub_them"
            style="@style/wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/hub_title_them"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_hub_time"
            style="@style/wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/hub_title_them"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_hub_address"
            style="@style/wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/hub_title_them"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_hub_status"
        style="@style/wrap_content"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ic_health_hub_activity"
        android:gravity="center"
        android:text="@string/activity"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
